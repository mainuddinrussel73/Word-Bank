<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/relative_quiz">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <TextView

        android:id="@+id/quiz_question"

        android:layout_width="265dp"

        android:layout_height="70dp"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginEnd="10dp"

        android:layout_marginLeft="13dp"

        android:layout_marginRight="10dp"

        android:layout_marginStart="13dp"
        android:layout_marginTop="85dp"

        android:paddingLeft="@dimen/padd"
        android:scrollbars="vertical"

        android:text="What is the meaning of the word    sjdfasdf  ?"

        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"


        android:textStyle="bold|italic" />

    <ScrollView
        android:id="@+id/scrollButtons"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignLeft="@+id/quiz_question"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/quiz_question"

        android:layout_below="@+id/quiz_question"

        android:layout_marginEnd="15dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/backgroundborder"
        android:paddingLeft="5dp">

        <RadioGroup

            android:id="@+id/radioGroup"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:paddingRight="5dp"

            android:paddingTop="5dp">


            <RadioButton

                android:id="@+id/radio0"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:background="@drawable/backgroundborder"

                android:button="@drawable/radio_btn"

                android:paddingBottom="@dimen/padd"

                android:paddingLeft="20dp"
                android:paddingTop="@dimen/padd"
                android:text="@string/app_name"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />


            <RadioButton

                android:id="@+id/radio1"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginBottom="10dp"
                android:background="@drawable/backgroundborder"
                android:button="@drawable/radio_btn"

                android:paddingBottom="@dimen/padd"

                android:paddingLeft="20dp"
                android:paddingTop="@dimen/padd"
                android:text="@string/app_name"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <RadioButton

                android:id="@+id/radio2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:background="@drawable/backgroundborder"

                android:button="@drawable/radio_btn"

                android:paddingBottom="@dimen/padd"

                android:paddingLeft="20dp"
                android:paddingTop="@dimen/padd"
                android:text="@string/app_name"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"

                />

            <RadioButton

                android:id="@+id/radio3"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:background="@drawable/backgroundborder"
                android:button="@drawable/radio_btn"

                android:paddingBottom="@dimen/padd"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/padd"

                android:text="@string/app_name"

                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />


        </RadioGroup>
    </ScrollView>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/scrollButtons"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="100dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/btn_display"
        android:textColor="@color/cardview_light_background" />


    <com.google.android.material.button.MaterialButton

        android:id="@+id/nextquiz"

        android:layout_width="wrap_content"

        android:layout_height="62dp"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/scrollButtons"

        android:layout_marginRight="15dp"

        android:layout_marginTop="13dp"
        android:gravity="center"

        android:padding="5dp"

        android:paddingBottom="10dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:paddingTop="10dp"
        android:text="@string/next_questions"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/scores"
        android:layout_width="100dp"
        android:layout_height="77dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="290dp"
        android:layout_marginRight="5dp"

        android:layout_marginTop="79dp"

        android:background="@drawable/backgroundborder"

        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="@string/Score"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="356dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"

        android:layout_alignParentStart="true"
        android:layout_marginEnd="15dp"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="650dp"
        android:background="@drawable/backgroundborder"
        android:text="@string/Time"
        android:textColor="@color/cardview_dark_background"
        android:textSize="20dp" />

</RelativeLayout>