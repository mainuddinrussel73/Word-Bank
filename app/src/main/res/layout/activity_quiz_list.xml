<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_quiz">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>


    <TextView

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/question"

        android:id="@+id/quiz_question"

        android:layout_alignParentTop="true"

        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"

        android:layout_marginEnd="10dp"

        android:layout_marginStart="10dp"

        android:layout_marginTop="70dp"

        android:textSize="20sp"

        android:textColor="@color/colorPrimaryDark"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true" />

    <RadioGroup

        android:layout_width="370dp"

        android:layout_height="wrap_content"

        android:layout_below="@+id/quiz_question"

        android:layout_alignLeft="@+id/quiz_question"

        android:layout_alignStart="@+id/quiz_question"

        android:layout_marginTop="40dp"

        android:id="@+id/radioGroup">


        <RadioButton

            android:layout_height="wrap_content"

            android:layout_width="match_parent"

            android:id="@+id/radio0"
            android:background="@drawable/backgroundborder"

            android:textSize="15sp"

            android:textColor="@color/colorPrimaryDark"

            android:text="@string/app_name"

            android:layout_marginBottom="10dp"

            android:paddingLeft="20dp"
            />

        <RadioButton

            android:layout_height="wrap_content"

            android:layout_width="match_parent"

            android:id="@+id/radio1"

            android:textSize="15sp"
            android:background="@drawable/backgroundborder"
            android:textColor="@color/colorPrimaryDark"

            android:text="@string/app_name"

            android:layout_marginBottom="10dp"

            android:paddingLeft="20dp"
            />

        <RadioButton

            android:layout_height="wrap_content"

            android:layout_width="match_parent"
            android:background="@drawable/backgroundborder"
            android:id="@+id/radio2"

            android:textSize="15sp"

            android:textColor="@color/colorPrimaryDark"

            android:text="@string/app_name"

            android:layout_marginBottom="10dp"

            android:paddingLeft="20dp"

            />

        <RadioButton

            android:layout_height="wrap_content"

            android:layout_width="match_parent"

            android:id="@+id/radio3"
            android:background="@drawable/backgroundborder"
            android:textSize="15sp"

            android:textColor="@color/colorPrimaryDark"

            android:text="@string/app_name"

            android:paddingLeft="20dp"
            />

    </RadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDisplay"
        android:layout_width="109dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/radioGroup"
        android:layout_marginEnd="87dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="192dp"
        android:layout_toStartOf="@+id/nextquiz"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/btn_display"
        android:textColor="@color/cardview_light_background" />


    <com.google.android.material.button.MaterialButton

        android:id="@+id/nextquiz"

        android:layout_width="160dp"

        android:layout_height="80dp"

        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioGroup"

        android:layout_marginRight="25dp"

        android:layout_marginTop="183dp"
        android:gravity="center"

        android:padding="5dp"

        android:paddingBottom="10dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:paddingTop="10dp"
        android:text="@string/next_questions"
        android:textColor="@color/cardview_light_background" />

    <TextView
        android:id="@+id/scores"
        android:layout_width="140dp"
        android:layout_height="29dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="100dp"

        android:text="@string/Score"

        android:background="@drawable/backgroundborder"
        android:textColor="@color/cardview_dark_background"
        android:paddingLeft="20dp"


        />

</RelativeLayout>