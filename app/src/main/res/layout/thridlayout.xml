<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_promodetail"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_view"
    android:paddingTop="15dp"

    android:fitsSystemWindows="true"

    >

<RelativeLayout
    android:id="@+id/maindd"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/card_background"
    >



    <RelativeLayout
        android:id="@+id/textlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        >



        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/text_field_boxes2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:imeOptions="actionNext"
            android:inputType="text"
            android:maxLines="1"
            android:text="hjbhjbjbhjb"
            android:enabled="true"
            android:background="@color/transparent"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:fontFamily="@font/belgrano"
            android:hint="Task"
            android:textSize="25dp"
            app:prefixTextColor="@color/material_brown300"
            app:prefix=" Task : " />








    </RelativeLayout>

    <LinearLayout
        android:id="@+id/btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textlayout"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/textsave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/green"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/ic_check_white_24dp"
            >

        </ImageButton>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lay2"

        android:layout_below="@+id/btns"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin">

        <TextView
            android:id="@+id/place1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:text="Number of promotodos : "
            >

        </TextView>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#EC0F23"
                app:cpb_progressbar_width="5dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="42dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#EC0F23"
                app:cpb_progressbar_width="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#EC0F23"
                app:cpb_progressbar_width="5dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="86dp"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#EC0F23"
                app:cpb_progressbar_width="5dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/spinerlayout"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:spinnerMode="dropdown" />


        </RelativeLayout>



    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lay4"

        android:layout_below="@+id/lay2"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15dp"
            android:textStyle="bold|italic"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_alignParentLeft="true"
            android:text="Repeat">

        </TextView>
        <TextView
            android:id="@+id/isrepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginTop="30dp"
            android:text="wswswswswss"
           >


        </TextView>



            <com.suke.widget.SwitchButton
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp">

            </com.suke.widget.SwitchButton>




    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/lay3"
        android:layout_below="@+id/lay4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin">


        <Button
            android:id="@+id/datepick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="Date Pick"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_style"
            android:textColor="@color/white"

           />

        <TextView
            android:id="@+id/viewdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:text="@string/nav_header_subtitle"
            android:textColor="@color/darkgray">


        </TextView>

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_below="@+id/lay3"
        android:layout_marginTop="10dp"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginBottom="15dp"
        >


        <Button
            android:id="@+id/soundpick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="White Noise"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:background="@drawable/btn_style"

            />

        <TextView
            android:id="@+id/viewsound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="@string/nav_header_subtitle"
            android:textColor="@color/darkgray">


        </TextView>

    </RelativeLayout>

</RelativeLayout>
    <RelativeLayout
        android:id="@+id/belowhere"
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginTop="450dp"

        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
        android:background="@drawable/card_background">


        <EditText
            android:id="@+id/texts"
            android:layout_width="match_parent"
            android:background="@color/transparent"
            android:layout_height="200dp"
            android:layout_margin="15dp"
            android:gravity="top|left"
            android:hint="Note.."
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:textColorHint="@color/cardview_dark_background">

        </EditText>
    </RelativeLayout>


</RelativeLayout>