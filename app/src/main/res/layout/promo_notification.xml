<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dip"
    android:id="@+id/l_layout"
    android:background="@drawable/yoda"
    android:textColor="@color/white">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/timerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="HH"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=":"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/timerview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:text="MM"
                android:textSize="30dp"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text=":"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>

            <TextView
                android:id="@+id/timerview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="SS"
                android:layout_marginLeft="10dp"
                android:textSize="30dp"/>
            <ImageButton
                android:id="@+id/promo_bar_play"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/play_controls_notification"
                android:layout_marginLeft="15dp"
                android:background="@color/colorTransparent"
                android:src="@drawable/play_arrow_black_24dp">

            </ImageButton>
        </LinearLayout>

</LinearLayout>