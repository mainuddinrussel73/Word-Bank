<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grid_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"

android:orientation="vertical"
android:layout_marginTop="14dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/background_card_dark"

    >



    <androidx.cardview.widget.CardView android:id="@+id/thumbnail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp">

        <com.github.siyamed.shapeimageview.RoundedImageView
            android:id="@+id/play_pause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:siRadius="5dp"
            android:src="@drawable/image"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/title5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="20"
        android:maxLines="1"
        android:text="Title"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/title6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/title5"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="25"
        android:maxLines="1"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#343434"
        android:textSize="10dip" />

    <TextView
        android:id="@+id/duration"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title6"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Description"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#10bcc9"
        android:textSize="10dip"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"/>
    <ImageButton
        android:id="@+id/options"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/title6"
        android:layout_alignRight="@+id/duration"
        android:layout_alignParentRight="true"
        android:layout_marginTop="4dp"
        android:layout_marginRight="-1dp"
        android:backgroundTint="@color/colorTransparent"
        android:src="@drawable/ic_more_vert_black_24dp"
        >

    </ImageButton>
</RelativeLayout>
