<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/secondary_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_promodetail"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/cancel_task"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingTop="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingBottom="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        android:background="@drawable/ic_keyboard_arrow_up_black_24dp">


    </Button>

    <com.mikhaellopez.circularprogressbar.CircularProgressBar
        android:id="@+id/circularProgressBar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
        android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        app:cpb_background_progressbar_color="#b6bbd8"
        app:cpb_background_progressbar_width="5dp"
        app:cpb_progress_direction="to_right"
        app:cpb_progressbar_color="#F240BD"
        app:cpb_progressbar_width="10dp"
        app:cpb_round_border="false" />
    <TextView
        android:id="@+id/procountH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="115dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        >

    </TextView>

    <TextView
        android:id="@+id/procountM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="165dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        >

    </TextView>

    <TextView
        android:id="@+id/procountS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="215dp"
        android:textSize="40dp"
        android:textColor="@color/white"
        >

    </TextView>
    <TextView
        android:id="@+id/tasktitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ppplp">

    </TextView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="600dp"
        android:src="@drawable/ic_play_arrow_black_24dp"

        >

    </com.google.android.material.floatingactionbutton.FloatingActionButton>



</RelativeLayout>