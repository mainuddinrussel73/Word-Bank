<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.czgame.wordbank.ui.Quiz.quiz_result"
    android:id="@+id/quiz_res"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layouts"
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/backgroundborder"
       >




        <com.razerdp.widget.animatedpieview.AnimatedPieView
            android:id="@+id/chart"
            android:layout_width="381dp"
            android:layout_height="362dp"
            android:layout_margin="@dimen/activity_horizontal_margin" />

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/ll_legends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
          />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="25.000%"/>





    </RelativeLayout>

            <RelativeLayout
                android:id="@+id/resultview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layouts"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/backgroundborder">
                <TextView
                    android:id="@+id/mainresult"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="25.000%">

                </TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/somee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/resultview">
    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/learnlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:background="@drawable/listview_border">

    </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/somee"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonshaperound"

            android:text="GO HOME"
            android:textColor="@android:color/white" />
    </RelativeLayout>
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>