<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.czgame.wordbank.ui.Quiz.quiz_result"
    android:id="@+id/quiz_res">



    <RelativeLayout
        android:id="@+id/layouts"
        android:layout_width="wrap_content"
        android:layout_height="324dp"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_background"
       >




        <com.razerdp.widget.animatedpieview.AnimatedPieView
            android:id="@+id/chart"
            android:layout_width="301dp"
            android:layout_height="302dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/activity_horizontal_margin" />

        <org.apmem.tools.layouts.FlowLayout
            android:id="@+id/ll_legends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
          />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="25.000%"/>





    </RelativeLayout>

    <RelativeLayout
                android:id="@+id/resultview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layouts"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:background="@drawable/card_background">
                <TextView
                    android:id="@+id/mainresult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:gravity="center"
                    android:text="Scores">

                </TextView>
    </RelativeLayout>

    <RelativeLayout
                android:id="@+id/somee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/resultview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">
                <androidx.recyclerview.widget.RecyclerView

                    android:id="@+id/learnlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_background"
                    android:padding="5dp">

                </androidx.recyclerview.widget.RecyclerView>
            </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/somee"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        >

        <Button
            android:id="@+id/goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_style"

            android:text="GO HOME"
            android:textColor="@android:color/white" />
    </RelativeLayout>




</RelativeLayout>