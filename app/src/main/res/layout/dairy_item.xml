<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">
        <TextView
            android:id="@+id/subjectListViewShapeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:fontFamily="@font/typer_roboto_light_italic"
            android:maxLines="1"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Subject"
            android:textColor="@color/material_blue900"
            android:textSize="15dp"
            />

        <TextView
            android:id="@+id/descriptionListtViewShapeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:fontFamily="@font/lobs_star"
            android:maxLines="3"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="@string/ex_msg_dialog_view_not_set"
            android:textColor="@color/bg"
            android:textSize="13dp"
            />

        <TextView
            android:id="@+id/dateListViewShapeId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="Date"
            android:textColor="@color/red"
            android:textSize="8dp"/>
    </LinearLayout>

