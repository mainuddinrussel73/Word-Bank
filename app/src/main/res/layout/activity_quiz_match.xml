<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:id="@+id/mmmmm">

    <TextView

        android:id="@+id/quiz_question"

        android:layout_width="245dp"

        android:layout_height="70dp"

        android:layout_alignParentLeft="true"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:layout_marginEnd="10dp"

        android:layout_marginLeft="13dp"

        android:layout_marginRight="10dp"
        android:layout_marginTop="75dp"

        android:layout_marginStart="13dp"
        android:background="@drawable/card_background"

        android:gravity="center"
        android:paddingLeft="@dimen/padd"
        android:scrollbars="vertical"

        android:text="Matching Games : "

        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"


        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/scores"
        android:layout_width="100dp"
        android:layout_height="77dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="21dp"

        android:layout_marginTop="75dp"
        android:layout_marginLeft="290dp"

        android:layout_marginRight="5dp"

        android:background="@drawable/card_background"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="@string/Score"
        android:textColor="@color/cardview_dark_background"
        android:textSize="14dp" />

    <LinearLayout
        android:id="@+id/llll"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@drawable/card_background"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:gravity="center_horizontal">

        <ListView
            android:id="@+id/text_list"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginBottom="@dimen/alerter_activity_horizontal_margin"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp" />

        <LinearLayout
            android:id="@+id/draw_line"
            android:layout_width="40dp"
            android:layout_height="600dp"
            android:orientation="horizontal">


        </LinearLayout>

        <ListView
            android:id="@+id/text_list1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginRight="74dp"
            android:layout_marginBottom="@dimen/alerter_activity_horizontal_margin"
            android:divider="@android:color/transparent"
            android:dividerHeight="10.0sp" />


    </LinearLayout>
<RelativeLayout
    android:id="@+id/buttonss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/llll"
    android:layout_marginTop="-150dp"
   >


    <Button
        android:id="@+id/nextpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"

        android:layout_marginLeft="30dp"
        android:layout_marginStart="19dp"
        android:paddingBottom="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        android:paddingTop="@dimen/alerter_activity_horizontal_margin"
        android:text="Next"
        android:background="@drawable/buttonshaperound"
        android:textColor="@color/white">

    </Button>

    <Button
        android:id="@+id/extpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="310dp"
        android:paddingBottom="@dimen/alerter_activity_horizontal_margin"
        android:paddingLeft="@dimen/alerter_activity_horizontal_margin"
        android:paddingRight="@dimen/alerter_activity_horizontal_margin"
        android:paddingTop="@dimen/alerter_activity_horizontal_margin"
        android:text="Exit"
        android:background="@drawable/buttonshaperound"
        android:textColor="@color/white">

    </Button>


</RelativeLayout>
</RelativeLayout>