<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.BackupAndRestore.backup_restore"
    tools:showIn="@layout/activity_backup_restore"
    android:id="@+id/coordinate">

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="530dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/backgroundborder"
        android:id="@+id/coordinate_backup"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="28dp">


        <EditText
            android:id="@+id/retext"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"

            android:layout_marginStart="18dp"
            android:layout_marginTop="175dp"
            android:background="@drawable/backgroundborder"
            android:hint="@string/File">


        </EditText>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/click"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="252dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="@string/Ok"
            android:textColor="@color/cardview_light_background"
            android:textSize="10dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/restore"
            android:layout_width="wrap_content"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="139dp"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="120dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@string/restore"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backup"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"

            android:layout_marginBottom="144dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:text="@string/Backup"
            android:textColor="@color/cardview_light_background"
            android:textSize="12dp" />


    </RelativeLayout>

</RelativeLayout>