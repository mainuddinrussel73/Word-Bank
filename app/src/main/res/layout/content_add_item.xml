<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.czgame.wordbank.ui.words.add_page"
    tools:showIn="@layout/activity_add_item">

    <RelativeLayout
        android:id="@+id/wordsec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbarlayout"
        android:background="@drawable/card_background"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/word"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titlelay"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars = "vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/word1"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:gravity="top|left"
                android:hint="Word"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars = "vertical"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@color/cardview_shadow_start_color"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/meaningB"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/word"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars = "vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/meaningB1"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_marginTop="20dp"
                android:gravity="top|left"
                android:hint="Meaning in Bengali"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars = "vertical"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@color/cardview_shadow_start_color"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/meaningE"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meaningB"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars = "vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/meaningE1"
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:layout_marginTop="20dp"
                android:gravity="top|left"
                android:hint="Meaning in English"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars = "vertical"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@color/cardview_shadow_start_color"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meaningE"
            android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/synonyme"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meaningE"
            android:layout_margin="10dp"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"

            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars = "vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/synonyme1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:gravity="top|left"
                android:hint="Synonym"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars = "vertical"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@color/cardview_shadow_start_color"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/antonyme"
            style="@style/LoginTextInputLayoutStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/meaningE"
            android:layout_margin="10dp"
            android:layout_marginRight="@dimen/alerter_activity_horizontal_margin"
            android:inputType="textMultiLine"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars = "vertical">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/antonyme1"
                android:layout_width="155dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:gravity="top|left"
                android:hint="Antonym"
                android:inputType="textMultiLine"
                android:overScrollMode="always"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars = "vertical"
                android:textColor="@android:color/background_dark"
                android:textColorHint="@color/cardview_shadow_start_color"
                />

        </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/wordsec"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/done"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="@dimen/alerter_activity_horizontal_margin"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshaperound"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:text="Done"
            android:textColor="@color/cardview_light_background"/>
        <Button
            android:id="@+id/loadonline"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="left"
            android:layout_marginLeft="160dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/buttonshaperound"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Load Online"
            android:textColor="@color/cardview_light_background"/>




    </RelativeLayout>
</RelativeLayout>