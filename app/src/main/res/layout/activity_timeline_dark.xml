<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timelineview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_timeline_view"
    android:layout_margin="15dp"
    android:background="@drawable/list_viewdark"
    >


    <xyz.sangcomz.stickytimelineview.TimeLineRecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        app:isSticky="true"
        android:layout_margin="5dp"
        app:sectionBackgroundColor="@color/black"
        app:sectionTitleTextColor="@color/red"


        />
</RelativeLayout>