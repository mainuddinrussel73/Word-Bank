<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:showIn="@layout/activity_promotodo_activity"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/lllll"
        android:layout_width="377dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="18dp"
        android:orientation="horizontal"

        android:background="@drawable/card_background"

        android:gravity="center_horizontal"
       android:padding="25dp">

        <RelativeLayout
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
        <TextView
            android:id="@+id/totaltask"
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:background="@drawable/backgroundborder"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="gvhgvh,jh,jhb"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:fontFamily="@font/lobs_star"
            android:textSize="10dp">

        </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <TextView
                android:id="@+id/totalhour"
                android:layout_width="80dp"
                android:layout_height="68dp"
                android:background="@drawable/backgroundborder"
                android:ems="2"
                android:fontFamily="@font/lobs_star"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:text="gvhgvh,jh,jhb"
                android:textColor="@color/red"
                android:textSize="10dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >
        <TextView
            android:id="@+id/taskremain"
            android:layout_width="110dp"
            android:layout_height="68dp"
            android:background="@drawable/backgroundborder"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:text="completed h"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:fontFamily="@font/lobs_star"
            android:textSize="10dp">

        </TextView>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/textlayout"
        android:layout_width="fill_parent"
        android:layout_height="77dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="23dp"
        android:background="@drawable/card_background"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <studio.carbonylgroup.textfieldboxes.ExtendedEditText
                android:id="@+id/text_field_boxes2"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_gravity="left|center"

                android:layout_margin="3dp"

                android:hint="Task"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"

                android:textSize="15dp"
                app:prefix="$ " />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            >

            <ImageButton
                android:id="@+id/dark_button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"

                android:layout_marginBottom="5dp"

                android:background="@drawable/buttonshaperound"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:src="@drawable/fab_add" />
        </RelativeLayout>


    </LinearLayout>



    <RelativeLayout
        android:id="@+id/borderss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:background="@drawable/card_background"
        >
        <com.yydcdut.sdlv.SlideAndDragListView
            android:id="@+id/lv_edit"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="@dimen/alerter_activity_horizontal_margin"
            android:background="?android:selectableItemBackground"
            android:layout_marginRight="8dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:layout_marginTop="@dimen/alerter_activity_horizontal_margin"
            android:listSelector="@drawable/list_selector"


            >
        </com.yydcdut.sdlv.SlideAndDragListView>

    </RelativeLayout>
</RelativeLayout>

